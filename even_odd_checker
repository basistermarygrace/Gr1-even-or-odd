#include <iostream>
using namespace std;

int main() {
    int num;
    char choice;

    do {
        cout << "Enter a number: ";
        cin >> num;

        if (num % 2 == 0) {
            cout << "The number is Even." << endl;
        } else {
            cout << "The number is Odd." << endl;
        }

        cout << "Do you want to check another number? (y/n): ";
        cin >> choice;

    } while (choice == 'y' || choice == 'Y');

    return 0;
}
